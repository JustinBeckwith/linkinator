{
	"$schema": "https://biomejs.dev/schemas/2.0.4/schema.json",
	"files": {
		"includes": [
			"src/**/*.ts",
			"test/**/*.ts",
			"samples/**/*.js",
			"!build/**/*"
		]
	},
	"assist": { "actions": { "source": { "organizeImports": "on" } } },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	}
}
